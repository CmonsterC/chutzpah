{
  "Compile": {
    "Extensions": [".ts"],
    "ExtensionsWithNoOutput": [".d.ts"],
    "OutDirectory": "out",
    "Executable": "%powershellexe%",
    "Arguments": "-NoProfile %chutzpahsettingsdir%\\compile.ps1"
   },
  "References": [
    {"Include": "*/src/*.ts", "Exclude": "*/src/*.d.ts" }
  ],
  "Tests": [
    { "Include": "*/test/*.ts", "Exclude": "*/test/*.d.ts" }
  ]
}